

RootWidget:


<RootWidget>:
	layout: layout
	app: app
	Buttons:
		id: layout


<Buttons>:
	_: app._ if app._ != None else str
	orientation: 'vertical'
	size_hint: .5, .5
	pos_hint: {'x': .25, 'y':.25}
	Button:
		id: english
		text: root._('English')
		on_release: app.set_language('en')
	Button:
		id: french
		text: root._('French')
		on_release: app.set_language('fr')
